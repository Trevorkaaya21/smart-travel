{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "OPENTRIPMAP_API_KEY",
        "GEOAPIFY_KEY",
        "GROQ_API_KEY",
        "GROQ_MODEL",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE",
        "DATABASE_URL",
        "GOOGLE_PLACES_API_KEY"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ]
    },
    "lint": {},
    "typecheck": {},
    "test": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
