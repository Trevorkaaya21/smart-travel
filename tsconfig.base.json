{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@smart-travel/ui/*": ["smart-travel-frontend/packages/ui/*"],
      "@smart-travel/types/*": ["smart-travel-frontend/packages/types/*"],
      "@smart-travel/config/*": ["smart-travel-frontend/packages/config/*"],
      "@smart-travel/utils/*": ["smart-travel-frontend/packages/utils/*"]
    }
  }
}
