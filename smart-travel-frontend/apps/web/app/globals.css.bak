@tailwind base;
@tailwind components;
@tailwind utilities;

/* ---- Theme tokens ---- */
:root{
  --bg: 0 0% 99%;
  --fg: 224 71% 4%;
  --panel: 0 0% 100% / 0.65;
  --panel-2: 0 0% 100% / 0.9;
  --border: 220 13% 91%;
  --muted: 220 14% 96%;
}
.dark{
  --bg: 222 47% 6%;
  --fg: 210 40% 98%;
  --panel: 215 25% 14% / 0.6;
  --panel-2: 215 25% 12% / 0.9;
  --border: 217 33% 17%;
  --muted: 217 33% 12%;
}

body{
  @apply bg-[hsl(var(--bg))] text-[hsl(var(--fg))];
  background-image:
    radial-gradient(900px 400px at 15% -10%, rgba(59,130,246,.08), transparent),
    radial-gradient(1200px 700px at 110% 10%, rgba(168,85,247,.08), transparent);
}

/* Reusable surfaces & controls */
.panel{ @apply rounded-2xl border border-[hsl(var(--border))] bg-[hsl(var(--panel))] backdrop-blur-xl; }
.card { @apply rounded-2xl border border-[hsl(var(--border))] bg-[hsl(var(--panel-2))] shadow-lg; }
.input{ @apply w-full rounded-xl border border-[hsl(var(--border))] bg-transparent px-3 py-2 outline-none placeholder:opacity-70 focus:ring-2 ring-[hsl(var(--fg))]/10; }
.btn  { @apply inline-flex items-center gap-2 rounded-xl border border-[hsl(var(--border))] bg-[hsl(var(--panel-2))] px-3 py-1.5 text-sm hover:bg-[hsl(var(--panel))] transition; }

/* Leaflet base CSS */
@import.leaflet-container{ @apply rounded-2xl; }